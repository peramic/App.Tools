<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="havis.custom.harting.tools.ui.resourcebundle.ConstantsResource" field="i18n" />
	<ui:with type="havis.custom.harting.tools.ui.resourcebundle.ResourceBundle" field="res" />
	<ui:style>

	</ui:style>
	<g:HTMLPanel styleName="{res.css.row}">
	    <div class="{res.css.wideLabel}">
	      	<ui:text from="{i18n.passwordLabel}"/>
	    </div>
	    <div class="{res.css.flexcol} {res.css.row}">
			<div>
				<g:ToggleButton ui:field="toggleButton" styleName="webui-Switcher {res.css.pwdToggle}" enabled="true" down="false"/>
			</div>
			<div class="{res.css.flexcol} {res.css.switchTb}">
				<g:TextBox ui:field="password" styleName="{res.css.webuiTextBox}" visible="false"/>
			</div>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 