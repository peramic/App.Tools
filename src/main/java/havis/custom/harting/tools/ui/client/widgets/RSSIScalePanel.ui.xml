<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="havis.net.ui.shared.resourcebundle.ResourceBundle" field="res"></ui:with>
	<ui:style>
	.value {
		position: absolute;
		left: 160px;
		top: 2px;
		font-size: 0.8em;
	}
	
	</ui:style>
	<g:FlowPanel addStyleNames="{res.css.background}">
		<g:Label addStyleNames="{style.value}" ui:field="value"/>
		<g:SimplePanel addStyleNames="{res.css.scale}" ui:field="scale"/>
	</g:FlowPanel>
</ui:UiBinder> 